/* pages/index/index.wxss */
/* 轮播图样式 start */
.banners{
  width: 100%;
  height: 300rpx;
}
.banners image{
  width: 100%;
  height: 100%;
}
/* 轮播图样式 end */

/* 五个导航区域样式 start */
.navContainer{
  display: flex;
}
.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}
.navItem .iconfont{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  line-height: 100rpx;
  text-align: center;
  font-size: 50rpx;
  background-color: rgb(240, 19,19);
  color: #ffffff;
  margin: 20rpx 0;
}
.navItem text{
  font-size: 26rpx;
}
/* 五个导航区域样式 end */

/*  推荐歌曲区域 start */

/* 头部 start */
.recommendContainer{
  padding: 20rpx;
}
/* 头部 end */

/* 内容区 start */
.recommendScroll{
  display: flex;
  height: 300rpx;
}
.scrollItem{
  width: 200rpx;
  margin-right: 20rpx;
}
.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollItem text{
  font-size: 26rpx;
