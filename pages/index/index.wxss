/*  推荐歌曲区域 end */

/* 排行榜 start */

/* 头部区域 start */
.topList{
  padding: 20rpx;
}
/* 头部区域 end */

/* 内容区 start */
.topListSwiper{
  height: 400rpx;
}
.swiperItem{
  width: 96%;
  background:#fbfbfb;
}
.swiperItem .title{
  font-size: 30rpx;
  line-height: 80rpx;
}
.musicItem{
  display: flex;
  margin-bottom: 20rpx;
}
.musicItem image{
  width: 100rpx;
  height: 100rpx;
}
.musicItem .count{
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.musicItem .musicName{
  height: 100rpx;
  line-height: 100rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
/* 内容区 end */

/* 排行榜 end */

