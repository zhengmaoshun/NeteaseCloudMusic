@import '/static/iconfont/iconfont.wxss';
page{
  height: 100%;
}
/* 每日推荐 start*/

/* 头部区域 start */
.recommendSongContainer .header{
  position: relative;
  width: 100%;
  height: 300rpx;
}
.recommendSongContainer .header image{
  width: 100%;
  height: 100%;
}
.recommendSongContainer .header .data{
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -150rpx;
  margin-top: -50rpx;
  width: 300rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #ffffff;
}
.recommendSongContainer .header .data .day{
  font-size: 38rpx;
}
/* 头部区域 end */

/* 内容区 start */
.recommendSongContainer .listContainer{
  position: relative;
  top: -20rpx;
  padding: 0 20rpx;
  border-radius: 30rpx;
  background: #ffffff;
}
.recommendSongContainer .listContainer .listHeader{
  height: 80rpx;
  line-height: 80rpx;
}
.recommendSongContainer .listContainer .listHeader .changeMore{
  float: right;
}

.listScroll{
  height: calc(100vh - 380rpx);
}
.listScroll .scrollItem{
  position: relative;
  display: flex;
  margin-bottom: 20rpx;
}
.listScroll .scrollItem image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}
.listScroll .scrollItem .musicInfo{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.listScroll .scrollItem .musicInfo text{
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.listScroll .scrollItem .iconfont{
  position: absolute;
  right: 0;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
}
/* 内容区 end */

/* 每日推荐 end */